<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".StreamActivity">

    <SurfaceView
        android:id="@+id/videoSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fpsOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="8dp"
        android:fontFamily="monospace"
        android:textColor="#00FF00"
        android:textSize="12sp"
        android:visibility="visible" />

    <!-- Hidden EditText for keyboard input capture -->
    <EditText
        android:id="@+id/keyboardInput"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_gravity="bottom|start"
        android:alpha="0"
        android:background="@null"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNone" />

    <!-- Navigation buttons (visible when keyboard is shown) -->
    <LinearLayout
        android:id="@+id/navButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <!-- Tab button -->
        <Button
            android:id="@+id/btnTab"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="Tab"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#80404040" />

        <!-- Arrow keys in a row -->
        <Button
            android:id="@+id/btnLeft"
            android:layout_width="56dp"
            android:layout_height="72dp"
            android:text="&lt;"
            android:textSize="20sp"
            android:backgroundTint="#80404040" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUp"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:text="^"
                android:textSize="16sp"
                android:backgroundTint="#80404040" />

            <Button
                android:id="@+id/btnDown"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:text="v"
                android:textSize="16sp"
                android:backgroundTint="#80404040" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRight"
            android:layout_width="56dp"
            android:layout_height="72dp"
            android:text="&gt;"
            android:textSize="20sp"
            android:backgroundTint="#80404040" />

    </LinearLayout>

</FrameLayout>
